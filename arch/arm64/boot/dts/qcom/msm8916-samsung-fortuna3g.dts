/dts-v1/;

#include "msm8916-samsung-gprime-common.dtsi"

/ {
	model = "Samsung Galaxy Grand Prime (SM-G530H)";
	compatible = "samsung,fortuna3g", "samsung,gprime", "qcom,msm8916";
	chassis-type = "handset";

	reserved-memory {
		/* Additional memory used by Samsung firmware modifications */
		tz-apps@85a00000 {
			reg = <0x0 0x85a00000 0x0 0x600000>;
			no-map;
		};

		mpss_mem: mpss@86800000 {
			reg = <0x0 0x86800000 0x0 0x5000000>;
			no-map;
		};

		gps_mem: gps@8b800000 {
			reg = <0x0 0x8b800000 0x0 0x200000>;
			no-map;
		};
	};

	display_backlight: display-backlight {
		compatible = "pwm-backlight";
		pwms = <&pwm_backlight 0 100000>;

		enable-gpios = <&msmgpio 98 GPIO_ACTIVE_HIGH>;

		brightness-levels = <0 255>;
		num-interpolated-steps = <255>;
		default-brightness-level = <128>;
	};

	pwm_backlight: pwm-backlight {
		compatible = "clk-pwm";
		#pwm-cells = <2>;

		clocks = <&gcc GCC_GP2_CLK>;

		pinctrl-names = "default";
		pinctrl-0 = <&backlight_pwm_default>;
	};
};

&blsp_i2c2 {
	status = "okay";

	accelerometer@1d {
		compatible = "st,lsm303c-accel";
		reg = <0x1d>;

		vdd-supply = <&pm8916_l17>;
		vddio-supply = <&pm8916_l5>;

		interrupt-parent = <&msmgpio>;
		interrupts = <115 IRQ_TYPE_EDGE_RISING>;
		interrupt-names = "INT1";

		st,drdy-int-pin = <1>;
		mount-matrix = "0", "1", "0",
			      "-1", "0", "0",
			       "0", "0", "1";

		pinctrl-names = "default";
		pinctrl-0 = <&accel_int_default>;
	};

	/* TODO: Add st,lsm303c-magn */
};

&panel {
	backlight = <&display_backlight>;
};

&msmgpio {
	accel_int_default: accel-int-default {
		pins = "gpio115";
		function = "gpio";

		drive-strength = <2>;
		bias-disable;
	};

	backlight_en_default: backlight-en-default {
		pins = "gpio98";
		function = "gpio";

		drive-strength = <2>;
		bias-disable;
	};

	backlight_pwm_default: backlight-pwm-default {
		pins = "gpio50";
		function = "gcc_gp2_clk_a";
	};
};
